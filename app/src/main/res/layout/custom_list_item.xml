<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:id="@+id/custom_item_image_view"
        />

    <TextView
        android:id="@+id/custom_item_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_toRightOf="@id/custom_item_image_view"

        android:text="Nombre del lugar"
        android:layout_alignTop="@id/custom_item_image_view"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/custom_item_place_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@id/custom_item_place_name"
        android:layout_alignLeft="@id/custom_item_place_name"

        android:text="DescripciÃ³n completa del lugar"


        android:layout_marginRight="10dp"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:numStars="5"
        android:layout_alignLeft="@id/custom_item_place_description"
        android:layout_below="@id/custom_item_place_description"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:id="@+id/custom_item_rating_bar"



        />

</RelativeLayout>