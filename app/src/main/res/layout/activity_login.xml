<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Login de usuario"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:id="@+id/login_title"
            />

        <View
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view_for_div"
            android:layout_below="@id/login_title">
        </View>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_uninorte"
            android:layout_below="@id/view_for_div"
            android:layout_centerHorizontal="true"

            android:id="@+id/logo_image_view"
            android:layout_marginBottom="10dp"


            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_edit_text"
            android:layout_below="@id/logo_image_view"
            android:hint="Usuario"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_edit_text"
            android:layout_below="@id/user_edit_text"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/password_edit_text"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:id="@+id/login_close"
                android:layout_weight="0.5"
                android:text="Cancelar"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:id="@+id/login_login"
                android:layout_weight="0.5"
                android:text="Acceder"

                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>